<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    
    tools:context=".MainActivity"
    android:background="@drawable/main_background" >
    
    <LinearLayout 
	    android:layout_weight="8"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
    	android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:paddingTop="5dp">
    <LinearLayout 
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/news_button"
            android:text="@string/news_button"
           android:layout_weight="1"
           android:layout_height="fill_parent"
           android:layout_width="0dp"
           android:background="@drawable/round_edges"
           android:layout_margin="5dp"/>
        <Button 
            android:id="@+id/announcement_button"
            android:text="@string/announce_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
           android:layout_width="0dp"
            android:background="@drawable/round_edges"
           android:layout_margin="5dp"/>
        <Button
            android:id="@+id/interview_button"
            android:text="@string/interview_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
           android:layout_width="0dp" 
            android:background="@drawable/round_edges"
           android:layout_margin="5dp"/>        
    </LinearLayout>
    <Button 
            android:id="@+id/article_button"
            android:text="@string/article_button"
            android:layout_weight="2"
            android:layout_height="0dp"
           android:layout_width="fill_parent"
            android:background="@drawable/round_edges"
           android:layout_margin="5dp"/>
    <LinearLayout 
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/contact_jamaat_button"
            android:text="@string/contact_jamaat_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
           android:layout_width="0dp"
            android:background="@drawable/round_edges"
           android:layout_margin="5dp"/>

        <Button
            android:id="@+id/about_jamaat_button"
            android:text="@string/about_jammat_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
           android:layout_width="0dp"
            android:background="@drawable/round_edges"
           android:layout_margin="5dp" />
    </LinearLayout>
    <Button 
        android:id="@+id/about_us_button"
        android:text="@string/about_us"
        android:layout_weight="2"
            android:layout_height="0dp"
           android:layout_width="fill_parent"
            android:background="@drawable/round_edges"
           android:layout_margin="5dp"/>
        

   </LinearLayout> 
</LinearLayout>
